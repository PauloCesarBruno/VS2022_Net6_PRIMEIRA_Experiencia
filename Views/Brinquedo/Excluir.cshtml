    ViewData["Title"] = "Excluir";
}

<h2>Excluir Brinquedo</h2>

<hr />

<h3>Tem certeza absoluta de que deseja EXCLUIR este brinquedo ?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdadeDeAte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdadeDeAte)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
