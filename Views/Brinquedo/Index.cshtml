@model IEnumerable<Brinquedos_NET6.Models.Brinquedo>

@{
    ViewData["Title"] = "Index";
}

<h2>Controle Brinquedos Estoque</h2>
<hr /><br />

<p>
    <a class="btn btn-outline-primary btn-sm" asp-action="Criar">Add. Novo Brinquedo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdadeDeAte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDeFabricacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmEstoque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdadeDeAte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataDeFabricacao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmEstoque)
                </td>
                <td>
                    <a asp-action="Atualizar" class="btn btn-outline-warning btn-sm" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Detalhes" class="btn btn-outline-info btn-sm ml-1" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Excluir" class="btn btn-outline-danger btn-sm ml-1" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
